<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:af="http://www.modaclouds.eu/xsd/2.0/aggregate_functions_schema"
	xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
	targetNamespace="http://www.modaclouds.eu/xsd/2.0/aggregate_functions_schema"
	elementFormDefault="qualified" attributeFormDefault="unqualified"
	jaxb:version="2.1">
	<xs:element name="aggregateFunctions">
		<xs:annotation>
			<xs:documentation>A list of aggregating functions</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element name="aggregateFunction" type="af:aggregateFunction"
					minOccurs="0" maxOccurs="unbounded">
					<xs:annotation>
						<xs:appinfo>
							<jaxb:property name="aggregateFunctions" />
						</xs:appinfo>
					</xs:annotation>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:complexType name="aggregateFunction">
		<xs:sequence>
			<xs:element name="requiredParameter" minOccurs="0"
				maxOccurs="unbounded">
				<xs:annotation>
					<xs:appinfo>
						<jaxb:property name="requiredParameters" />
					</xs:appinfo>
				</xs:annotation>
				<xs:complexType>
					<xs:simpleContent>
						<xs:extension base="xs:string">
							<xs:attribute name="defaultValue" type="xs:string"
								use="optional" />
						</xs:extension>
					</xs:simpleContent>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
		<xs:attribute name="name" type="xs:string" use="required" />
		<xs:attribute name="computedBy" type="af:aggregator" />
	</xs:complexType>
	<xs:simpleType name="aggregator">
		<xs:restriction base="xs:string">
			<xs:enumeration value="DeterministicDataAnalyzer" />
			<xs:enumeration value="JAVAStatisticalDataAnalyzer" />
			<xs:enumeration value="MATLABStatisticalDataAnalyzer" />
		</xs:restriction>
	</xs:simpleType>
</xs:schema>
